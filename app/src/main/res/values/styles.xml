<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="mytoast">
        <item name="stTextBold">false</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/basic_font</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/alertColor</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/alertColor</item>
        <item name="stIconStart">@drawable/logo</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <!--<item name="stGravity">top</item> top or center-->
        <item name="stRadius">3dp</item>
    </style>

</resources>
